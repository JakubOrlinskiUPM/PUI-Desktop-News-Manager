<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="loginWindow" prefHeight="294.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <top>
      <ImageView fx:id="loginLogo" fitHeight="70.0" fitWidth="143.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="alertLabel" visible="false" prefHeight="17.0" text="The username or passwrod are wrong!" />

            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="404.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="90.0" text="Login:" />
                  <TextField fx:id="userIdField" promptText="User IDUser ID" text="Admin1" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="37.0" prefWidth="404.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="90.0" text="Password:" />
                  <PasswordField  fx:id="passwordField" promptText="Password" text="admin1" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="39.0" prefWidth="404.0" spacing="100.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" text="Back" />
                  <Button fx:id="loginButton" mnemonicParsing="false" text="Login" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
